{
  "extends": "./tsconfig.json",
  "include": ["dist/src"],
  "exclude": ["dist/src/_shims/*-deno.ts"],
  "compilerOptions": {
    "rootDir": "./dist/src",
    "paths": {
      "@tryfinch/finch-api/*": ["dist/src/*"],
      "@tryfinch/finch-api": ["dist/src/index.ts"],
    },
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true
  }
}
